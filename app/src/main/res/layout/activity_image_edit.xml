<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:minHeight="?attr/actionBarSize"
        android:elevation="10dp"
        android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <RelativeLayout
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/banner_flipper"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp">
                <ImageView
                    android:tint="#d9d9d9"
                    android:layout_marginRight="10dp"
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    app:srcCompat="@drawable/ic_round_undo_inactive_24px" />
                <ImageView
                    android:layout_gravity="center"
                    android:tint="#d9d9d9"
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    app:srcCompat="@drawable/ic_round_redo_inactive_24px" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:id="@+id/redo_uodo_panel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@+id/banner_flipper"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp">
                <ImageView
                    android:tint="#25D366"
                    android:layout_marginRight="10dp"
                    android:id="@+id/uodo_btn"
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    app:srcCompat="@drawable/ic_round_undo_inactive_24px" />
                <ImageView
                    android:tint="#25D366"
                    android:id="@+id/redo_btn"
                    android:layout_width="45dp"
                    android:layout_height="fill_parent"
                    app:srcCompat="@drawable/ic_round_redo_inactive_24px" />
            </LinearLayout>
            <ViewFlipper
                android:layout_alignParentRight="true"
                android:id="@+id/banner_flipper"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:flipInterval="1000"
                android:gravity="center">

                <TextView
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="#25D366"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/apply"
                    android:textColor="#25D366"
                    android:textSize="20sp" />
            </ViewFlipper>
        </RelativeLayout>
        <ImageView
            android:padding="10dp"
            android:id="@+id/back_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="left|center_vertical"
            android:tint="@color/black"
            app:srcCompat="@drawable/ic_arrow_back_black" />

        <TextView
            android:visibility="gone"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </FrameLayout>

    <com.virmana.stickers_app.editor.editimage.view.CustomViewPager
        android:elevation="10dp"
        android:id="@+id/bottom_gallery"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:overScrollMode="never" />
    <FrameLayout
        android:id="@+id/work_space"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_gallery"
        android:layout_below="@id/banner"
        android:background="@color/white">

        <com.virmana.stickers_app.editor.editimage.view.imagezoom.ImageViewTouch
            android:id="@+id/main_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <com.virmana.stickers_app.editor.editimage.view.StickerView
            android:id="@+id/sticker_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.virmana.stickers_app.editor.editimage.view.CropImageView
            android:id="@+id/crop_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.virmana.stickers_app.editor.editimage.view.RotateImageView
            android:id="@+id/rotate_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.virmana.stickers_app.editor.editimage.view.TextStickerView
            android:id="@+id/text_sticker_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.virmana.stickers_app.editor.editimage.view.CustomPaintView
            android:id="@+id/custom_paint_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>



</RelativeLayout>