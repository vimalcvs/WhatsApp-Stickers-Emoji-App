<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        >
        <ImageView
            android:id="@+id/pack_try_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            app:srcCompat="@drawable/sticker_error"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="10dp"
        android:dividerHeight="19.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="1dp"
        android:elevation="1dp"
        android:divider="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:paddingLeft="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginRight="70dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/item_pack_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"
                                    android:text="Pack Name "
                                    android:layout_marginRight="10dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                    android:textSize="20dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="@color/dark_gray"
                                android:id="@+id/item_pack_publisher"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:text="By publisher"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/image_view_item_pack_fav"
                        android:tint="@color/menuSelector"
                        app:srcCompat="@drawable/ic_favorite_black"
                        android:padding="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/sticker_one"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="6dp"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:background="@drawable/sticker_error"
                            app:srcCompat="@drawable/sticker_error"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/sticker_two"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:background="@drawable/sticker_error"
                        app:srcCompat="@drawable/sticker_error"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/sticker_three"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:background="@drawable/sticker_error"
                        app:srcCompat="@drawable/sticker_error"
                         />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/sticker_four"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:background="@drawable/sticker_error"
                        app:srcCompat="@drawable/sticker_error"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/sticker_five"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="6dp"
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:background="@drawable/sticker_error"
                        app:srcCompat="@drawable/sticker_error"
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/sticker_six"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="6dp"
                            android:scaleType="fitCenter"
                            android:padding="3dp"
                            android:background="@drawable/sticker_error"
                            app:srcCompat="@drawable/sticker_error"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="#66d4d4d4"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/pack_item_image_view_userimage"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/profile" />
                    <TextView
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:id="@+id/item_pack_username"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:gravity="left|center_vertical"
                        android:textSize="10dp"
                        android:layout_marginLeft="2dp"
                        android:text="10 Comments"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView
                            android:padding="2dp"
                            android:tint="@color/dark_gray"
                            app:srcCompat="@drawable/ic_file_download"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/item_pack_downloads"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="12,7K Views"
                            android:textColor="@color/dark_gray"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView

                            android:padding="2dp"
                            android:tint="@color/dark_gray"
                            app:srcCompat="@drawable/ic_size"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:id="@+id/item_pack_size"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"
                            android:gravity="left|center_vertical"
                            android:textSize="10dp"
                            android:layout_marginLeft="2dp"
                            android:text="123 kb"
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingRight="4dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="20dp"
                            android:tint="@color/dark_gray"
                            app:srcCompat="@drawable/ic_time" />

                        <TextView
                            android:id="@+id/item_pack_created"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="10 minutre ago"
                            android:textColor="@color/dark_gray"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/item_pack_premium"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="@drawable/background_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="1dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_attach_money" />
        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="Premium"
            android:textSize="12dp"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/item_pack_delete"
        android:gravity="center"
        android:background="@drawable/background_btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="5dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_delete_review" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="Delete"
            android:textSize="12dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout

        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/item_pack_review"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="@drawable/background_btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="1dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_time" />
        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="top"
            android:textColor="@color/white"
            android:text="On Review"
            android:textSize="12dp"
            android:layout_marginLeft="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>